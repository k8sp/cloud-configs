  - path: "/etc/resolv.conf"
    permissions: "0644"
    owner: "root"
    content: |
      nameserver 8.8.8.8
  - path: "/etc/systemd/network/10-static.network"
    permissions: "0644"
    owner: "root"
    content: |
      [Match]
      Name=enp1s0f0

      [Network]
      Address={{ .IP }}/24
